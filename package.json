{
  "name": "continuum",
  "productName": "Continuum",
  "version": "0.1.0",
  "description": "Continuum - AI for humans by VANTA Research",
  "author": {
    "name": "VANTA Research",
    "email": "info@vantaresearch.com"
  },
  "homepage": "https://vantaresearch.com",
  "main": "electron/main.js",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "electron": "electron .",
    "electron:dev": "concurrently \"cross-env NODE_ENV=development npm run dev\" \"wait-on http://localhost:3000 && cross-env NODE_ENV=development electron .\"",
    "electron:build": "next build && electron-builder",
    "electron:build:all": "next build && electron-builder -mwl"
  },
  "build": {
    "appId": "com.vanta.continuum",
    "productName": "Continuum",
    "asar": false,
    "files": [
      "electron/**/*",
      ".next/**/*",
      "public/**/*",
      "app/**/*",
      "components/**/*",
      "lib/**/*",
      "data/**/*",
      "continuum.png",
      "package.json",
      "next.config.js",
      "tsconfig.json",
      "postcss.config.mjs",
      "components.json",
      ".env.local",
      ".env.search",
      "!node_modules",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": ".",
      "output": "dist"
    },
    "extraResources": [
      {
        "from": ".env.local",
        "to": ".env.local",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": ".env.search",
        "to": ".env.search",
        "filter": [
          "**/*"
        ]
      }
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "continuum.png",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "icon": "continuum.png",
      "target": [
        "nsis",
        "portable"
      ]
    },
    "linux": {
      "icon": "continuum.png",
      "category": "Utility",
      "target": [
        "AppImage",
        "deb"
      ]
    }
  },
  "dependencies": {
    "@codemirror/lang-markdown": "^6.5.0",
    "@codemirror/state": "^6.5.3",
    "@codemirror/view": "^6.39.7",
    "@radix-ui/react-avatar": "^1.1.11",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slider": "^1.3.6",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-switch": "^1.2.6",
    "@uiw/react-codemirror": "^4.25.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.562.0",
    "next": "16.1.1",
    "pdf-parse": "^2.4.5",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "react-markdown": "^10.1.0",
    "rehype-highlight": "^7.0.2",
    "remark-gfm": "^4.0.1",
    "tailwind-merge": "^3.4.0",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "@types/node": "^20",
    "@types/pdf-parse": "^1.1.5",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "babel-plugin-react-compiler": "1.0.0",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "eslint": "^9",
    "eslint-config-next": "16.1.1",
    "tailwindcss": "^4",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5",
    "wait-on": "^9.0.3"
  }
}
